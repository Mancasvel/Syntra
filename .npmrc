# ============================================
# SYNTRA - CONFIGURACIÓN SEGURA DE NPM
# ============================================

# Verificación de integridad obligatoria
package-lock=true
save-exact=true
audit-level=moderate

# Prevenir ejecución de scripts maliciosos
ignore-scripts=false
# NOTA: Cambiamos a false pero con whitelist específica

# Verificación de certificados SSL
strict-ssl=true
ca=

# Registry oficial únicamente (no mirrors no verificados)
registry=https://registry.npmjs.org/

# Timeout de seguridad
fetch-timeout=60000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Verificación de checksums
package-lock-only=false

# Logging de seguridad
loglevel=warn

# Prevenir instalación global accidental
prefer-offline=false

# Verificación de engines
engine-strict=true

# Forzar uso de package-lock.json
ci=false

# Configuración de cache segura
cache-max=86400000
cache-min=10
