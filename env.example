# ============================================
# SYNTRA - VARIABLES DE ENTORNO
# ============================================

# Entorno
NODE_ENV=development

# URLs de servicios
FRONTEND_URL=http://localhost:3000
MOBILE_APP_URL=http://localhost:19006

# Backend
PORT=3001

# Base de datos PostgreSQL
# Database - MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/syntra_db?retryWrites=true&w=majority
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/syntra_db?retryWrites=true&w=majority

# Redis (Cache y sesiones)
REDIS_URL=redis://:syntra_redis_pass@localhost:6379

# JWT (Autenticación)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI (IA y recomendaciones)
OPENAI_API_KEY=sk-your-openai-api-key-here

# RevenueCat (Suscripciones y pagos)
REVENUECAT_API_KEY=sk_your-revenuecat-secret-api-key
REVENUECAT_WEBHOOK_SECRET=your-revenuecat-webhook-secret

# AWS (Almacenamiento de archivos)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=syntra-uploads

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# MQTT (IoT/NFC devices)
MQTT_URL=mqtt://localhost:1883
MQTT_USERNAME=syntra_mqtt
MQTT_PASSWORD=syntra_mqtt_pass

# ============================================
# FRONTEND (Next.js)
# ============================================

NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001
NEXT_PUBLIC_REVENUECAT_API_KEY=pk_your-revenuecat-public-api-key

# ============================================
# MOBILE APP (React Native)
# ============================================

EXPO_PUBLIC_API_URL=http://localhost:3001
EXPO_PUBLIC_SOCKET_URL=http://localhost:3001
EXPO_PUBLIC_REVENUECAT_IOS_API_KEY=appl_your-ios-api-key
EXPO_PUBLIC_REVENUECAT_ANDROID_API_KEY=goog_your-android-api-key

# ============================================
# DESARROLLO Y TESTING
# ============================================

# Habilitar logs de debug
DEBUG=syntra:*

# Habilitar PWA
ENABLE_PWA=false

# Modo de desarrollo
DEVELOPMENT_MODE=true

# ============================================
# PRODUCCIÓN
# ============================================

# Para producción, cambiar estos valores:
# NODE_ENV=production
# DATABASE_URL=postgresql://user:pass@production-db:5432/syntra
# REDIS_URL=redis://production-redis:6379
# JWT_SECRET=super-secure-production-secret-min-32-chars
# FRONTEND_URL=https://syntra.com
# NEXT_PUBLIC_API_URL=https://api.syntra.com
